<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="simugen.gui.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="simugen.gui.Perspective"
            name="Perspective"
            id="TestGui.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="simugen.gui.views.ConsoleView"
            name="Console"
            id="TestGui.view"
            inject="true">
      </view>
      <view
            class="simugen.gui.views.ModelSettingsView"
            id="TestGui.ModelSettingsView"
            name="Model Settings"
            restorable="true">
      </view>
      <view
            class="simugen.gui.views.OutputView"
            id="TestGui.OutputView"
            name="Output"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="TestGui.view"
               minimized="false"
               relationship="bottom"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="TestGui.ModelSettingsView"
               minimized="false"
               relationship="top"
               relative="TestGui.view">
         </view>
         <view
               id="TestGui.OutputView"
               minimized="false"
               relationship="stack"
               relative="TestGui.ModelSettingsView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="TestGui.Run"
                  disabledIcon="icons/eclipse16.png"
                  label="Run">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
         <menu
               label="Window">
            <command
                  commandId="org.eclipse.ui.views.showView"
                  label="Show View..."
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="simugen.gui.RunHandler"
            id="TestGui.Run"
            name="Run">
      </command>
   </extension>

</plugin>
